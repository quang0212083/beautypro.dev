<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="contentbuilder_verify" version="2.5" method="upgrade">
	<name>ContentBuilder - Verify - PayPal</name>
	<creationDate>August 2011</creationDate>
	<author>Markus Bopp - Crosstec GmbH &amp; CO. KG</author>
        <license>GNU/GPLv2 http://www.gnu.org/licenses/gpl-2.0.html</license>
	<copyright>This Joomla! component is released under the GNU/GPL license</copyright>
	<authorEmail>markus.bopp@crosstec.de</authorEmail>
	<authorUrl>www.crosstec.de</authorUrl>
	<version>1.0</version>
	<administration></administration>
	<description>
	<![CDATA[
        Simple PayPal payment that verifies the desired view
        ]]>
    </description>
    <files>
        <filename plugin="paypal">paypal.php</filename>
    </files>
    <languages>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="business" type="text" default="" label="Business/Email"/>
                <field name="token" type="text" default="" label="Token"/>
                <field name="test" type="radio" default="0" label="Sandbox">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                <field name="test_business" type="text" default="" label="Test Business/Email"/>
                <field name="test_token" type="text" default="" label="Test Token"/>
            </fieldset>
        </fields>
    </config>
    <!--  J! 1.5 compatibility -->
    <params>
        <param name="business" type="text" default="" label="Business/Email"/>
        <param name="token" type="text" default="" label="Token"/>
        <param name="test" type="radio" default="0" label="Sandbox">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="test_business" type="text" default="" label="Test Business/Email"/>
        <param name="test_token" type="text" default="" label="Test Token"/>
    </params>
</extension>