<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site"  method="upgrade">
	
    <name>Category Block Module</name>
    <author>Design Compass corp</author>
    <creationDate>June 2014</creationDate>
    <copyright>Copyright (C) 2009-2014 DesignCompassCorp. All rights reserved.</copyright>
    <license>GNU General Public License</license>
    <authorEmail>support@joomlaboat.com</authorEmail>
    <authorUrl>http://www.joomlaboat.com/</authorUrl>
    <version>1.8.0</version>
    <description>MOD_CATEGORYBLOCK_DESC</description>
    <files>
        <filename module="mod_categoryblock">mod_categoryblock.php</filename>
        <filename>mod_categoryblock.xml</filename>
		<filename>categoryblock.js</filename>
		<filename>index.html</filename>
    </files>
	
	<config>
	<fields name="params">
		
		<fieldset name="GENERAL" addfieldpath="administrator/components/com_categoryblock/models/fields/">
			<field
                                name="categoryblockid"
                                type="CategoryBlock"
                                label="Select saved profile..."
                                description="If you select profile then all 'Parameters Advanced' settings will be ignored."
			/>
			<field
                                name="catid"
                                type="CategoryOptionalSmart"
                                label="Select category..."
                                extension="com_content"
                                description=""
			/>
		</fieldset>

        </fields>
        
        <fields name="params">
            <fieldset name="EXTENDED">
		<field type="text" name="customitemid" default="0" label="Open an Article with custom ItemId" description="if not set then it will be opened with parent Itemid" />
	    </fieldset>
	</fields>
	
	</config>
	<languages>
        <language tag="en-GB">language/en-GB.mod_categoryblock.ini</language>
        <language tag="en-GB">language/en-GB.mod_categoryblock.sys.ini</language>
		<language tag="es-ES">language/es-ES.mod_categoryblock.ini</language>
        <language tag="es-ES">language/es-ES.mod_categoryblock.sys.ini</language>
		<language tag="pl-PL">language/pl-PL.mod_categoryblock.ini</language>
        <language tag="pl-PL">language/pl-PL.mod_categoryblock.sys.ini</language>
    </languages>
</extension>
